@using ManyToManyApp.Models;
@model ManyToManyApp.Models.Student

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <h4>Студент</h4>
    @Html.HiddenFor(m => m.Id)
    <div class="editor-label"><b>Имя</b></div>
    <div class="editor-field">@Html.EditorFor(m => m.Name)</div>
    <div class="editor-label"><b>Фамилия</b></div>
    <div class="editor-field">@Html.EditorFor(m => m.Surname)</div>
    <div class="editor-label"><b>Курсы</b></div>
    // foreach (var c in ViewBag.Courses)
    foreach (Course c in ViewBag.Courses)
    {
        <input type="checkbox" name="selectedCourses" value="@c.Id"
            @(Model.Courses.Contains(c) ? "checked=\"checked\"" : "") />@c.Name<br />
    }
    <p><input type="submit" name="name" value="Сохранить" /></p>
}


